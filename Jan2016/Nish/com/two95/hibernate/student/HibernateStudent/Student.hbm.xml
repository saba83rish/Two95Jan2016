<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.two95.hibernate.student.HibernateStudent.Student" table="Student">
        <id name="StudentId" type="int">
            <column name="Student_ID" precision="5" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="FirstName" type="string">
            <column name="First_Name" length="20" not-null="true" />
        </property>
        <property name="LastName" type="string">
            <column name="Last_Name" length="20" not-null="true" />
        </property>
        <property name="Gender" type="string">
            <column name="GENDER" length="7" not-null="true" />
        </property>
    </class>
</hibernate-mapping>